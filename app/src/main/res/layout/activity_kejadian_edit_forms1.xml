    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/buttonCameraEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="true"
        android:contentDescription="@string/add"
        android:visibility="gone"
        app:backgroundTint="@color/oren"
        app:layout_constraintBottom_toTopOf="@+id/scrollView3Edit"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/orenmuda"
        app:srcCompat="@drawable/ic__photo_camera" />

    <Button
        android:id="@+id/btnKej1Edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
